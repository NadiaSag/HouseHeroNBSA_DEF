<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <objectAnimator
            android:propertyName="cardElevation"
            android:valueTo="8dp"
            android:valueType="floatType"
            android:duration="200"/>
    </item>
    <item>
        <objectAnimator
            android:propertyName="cardElevation"
            android:valueTo="4dp"
            android:valueType="floatType"
            android:duration="200"/>
    </item>
</selector>
